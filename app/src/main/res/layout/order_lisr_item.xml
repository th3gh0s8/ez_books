<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/coustom_in_search"
    >


    <TextView
        android:id="@+id/oder_item_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00202005116"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/order_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30-07-2022"
            android:textSize="12sp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/oder_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="LKR 2,500.00"
            android:textSize="12sp"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/red"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:text="Payment Status :"
            android:textSize="14dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/order_item_paymentStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Unpaid"
            android:textSize="14dp"
            android:layout_weight="1"

            />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Delivey Status :"
            android:textSize="14dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/order_item_deliveryStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="On Plased"
            android:textSize="14dp"
            android:layout_weight="1"

            />



    </LinearLayout>

</LinearLayout>